<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Bean From DB"
            id="com.renho.beanFromDB">
      </category>
      <view
            name="DB View"
            icon="icons/sample.gif"
            category="com.renho.beanFromDB"
            class="com.renho.beanfromdb.views.DBView"
            id="com.renho.beanfromdb.views.DBView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="com.renho.beanfromdb.views.DBView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
