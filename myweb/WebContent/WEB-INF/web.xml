<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>myweb</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>Set Character Encoding</filter-name>
    <filter-class>com.zhuhai.filter.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Set Character Encoding</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>authentication</filter-name>
    <filter-class>com.zhuhai.filter.AuthenticationFilter</filter-class>
    <init-param>
      <param-name>redirectURl</param-name>
      <param-value>/view/main.html</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>authentication</filter-name>
    <url-pattern>/servlet/mypost</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>TicketBusiQueryallServlet</servlet-name>
    <servlet-class>com.zhuhai.servlet.TicketBusiQueryallServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TicketBusiQueryallServlet</servlet-name>
    <url-pattern>/ticketbusiness/queryall</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>MainRedirectServlet</servlet-name>
    <servlet-class>com.zhuhai.servlet.MainRedirectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainRedirectServlet</servlet-name>
    <url-pattern>/main/redirect</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>DefaultTBusiQueryallServlet</servlet-name>
    <servlet-class>com.zhuhai.servlet.DefaultTBusiQueryallServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DefaultTBusiQueryallServlet</servlet-name>
    <url-pattern>/defticketbusiness/queryall</url-pattern>
  </servlet-mapping>
</web-app>